/**
 * Implements hook_node_insert().
 *  auto inserts nodequeue when submitting tabrolls
 */
function ding_tabroll_node_insert($node) {
  $nid = $node->nid;
  $type = $node->type;
  // Only process project node.
  if ($type != 'ding_tabroll') {
    return FALSE;
  }

  if (isset($node->field_municipality_ref['und'][0])) {
    $municipalities = $node->field_municipality_ref['und'][0]['target_id'];
    $queue = nodequeue_load_queue_by_name('ding_tabroll_for_municipalities');
    $subqueues = nodequeue_load_subqueues_by_reference(array($queue->qid => array($municipalities)));
  }
  else {
    $queue = nodequeue_load_queue_by_name('ding_tabroll');
    $subqueues = nodequeue_load_subqueues_by_queue($queue->qid);
  }
  $subqueues = array_values($subqueues);
  $subqueue = $subqueues[0];

  if (function_exists('views_invalidate_cache')) {
    views_invalidate_cache();
  }

  nodequeue_subqueue_add($queue, $subqueue, $nid);
}
